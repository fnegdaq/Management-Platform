/* pages/orderDetail/orderDetail.wxss */

.after_bottom {
  padding-bottom: 98rpx;
}

.top_bgView {
  box-sizing: border-box;
  height: 200rpx;
  position: relative;
}

.top_bgView image {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
}

.type3 {
  position: absolute;
  width: 100%;
  height: 134rpx;
  margin-left: 30rpx;
}

.top_order_status {
  position: absolute;
  width: 100%;
  height: 134rpx;
  margin-left: 30rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
}

.type3 image {
  width: 30rpx;
  height: 30rpx;
  background: #fff;
  border-radius: 50%;
}

.type3 text {
  color: #fff;
  font-size: 40rpx;
  margin: 0 40rpx;
  font-weight: bold;
}

.right {
  color: #fff;
  font-size: 24rpx;
}

.suspension_view_box {
  margin: 0 30rpx;
  position: relative;
}

.suspension_view {
  top: -66rpx;
  width: 100%;
  z-index: 2;
  background: #fff;
  position: absolute;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 10rpx #f4f8f9;
}

.suspension_order_status {
  margin: 30rpx 30rpx 0 30rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 30rpx;
  font-weight: bold;
}

.order_type {
  margin-left: 10rpx;
  color: #00aeff;
  border: 1rpx solid #00aeff;
  border-radius: 4rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  padding: 0 8rpx;
  text-align: center;
  width: 96rpx;
}

.suspension_view_info {
  margin: 30rpx 30rpx 20rpx 30rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 28rpx;
}

.suspension_view_address {
  margin: 0 30rpx 30rpx 30rpx;
  color: #666;
  font-size: 28rpx;
}

.goods_info {
  background: #fff;
}

.goods_info_title {
  /* padding: 242rpx 0 30rpx 30rpx; */
  color: #333;
  font-size: 32rpx;
}

.goods_list {
  background: #f5f5f5;
  margin-bottom: 10rpx;
}

.left_image {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 20rpx 20rpx 30rpx;
}

.left_image image {
  width: 100%;
  height: 100%;
}

.right_content {
  margin-right: 30rpx;
}

.goods_name {
  color: #333;
  font-size: 28rpx;
}

.goods_money {
  color: #999;
  font-size: 24rpx;
}

.goods_money text {
  margin-left: 40rpx;
}

.remark {
  background: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
  color: #666;
  font-size: 28rpx;
  box-shadow: 0 10rpx 10rpx #f4f8f9;
}

.order_info {
  margin: 20rpx 0;
  background: #fff;
}

.order_info_title {
  padding: 30rpx 30rpx 0 30rpx;
  color: #333;
  font-size: 32rpx;
  line-height: 32rpx;
}

.two_line {
  border-bottom: 1rpx solid #eee;
  padding: 30rpx 30rpx 20rpx 30rpx;
  color: #999;
  font-size: 26rpx;
  line-height: 26rpx;
}

.order_time {
  margin-top: 20rpx;
}

.payment {
  padding: 20rpx 30rpx;
  color: #999;
  font-size: 26rpx;
  line-height: 26rpx;
  border-bottom: 1rpx solid #eee;
}

.allMoney {
  color: #333;
  font-size: 28rpx;
}

.actual_payment {
  padding: 30rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 10rpx 10rpx #f4f8f9;
}

.actual_payment_money {
  color: #00aeff;
  font-size: 30rpx;
}

