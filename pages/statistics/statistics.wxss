/* pages/statistics/statistics.wxss */
.colorOrange {
  color: #f5a000;
}

.colorGreen {
  color: #39b54a;
}

.colorBlue {
  color: #00aeff;
}

.colorYellow {
  color: #ffdb5c;
}

.colorSkyBlue{
  color:#37a2da;
}

.main {
  width: 100%;
  background: #f7fbfc;
}

.tabHeader {
  width: 100%;
  height: 90rpx;
  background: #fff;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: flex;
  justify-content: space-around;
  border-bottom: 2rpx solid #eee;
}

.tabHeader view {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tabHeader .active text {
  display: inline-block;
  width: 60rpx;
  height: 4rpx;
  background: #00aeff;
  border-radius: 1rpx;
  margin-top: 6rpx;
}

.date {
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date_time {
  display: flex;
  align-items: center;
  justify-content: center;
}

.date_time image {
  width: 19rpx;
  height: 36rpx;
}

.date_time text {
  font-size: 32rpx;
  color: #333;
  margin: 0 60rpx;
}

/* 营业概况分析 */

.business {
  margin-top: 20rpx;
  background: #fff;
}

.business .head {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}

.business .head .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #24303c;
}

.business .head .detail {
  font-size: 28rpx;
  color: #666;
}

.business .baseBox {
  padding: 30rpx;
  position: relative;
}

.business .baseBox .lines {
  width: 90%;
  height: 2rpx;
  background: #eee;
  position: absolute;
  top: 190rpx;
  margin: 0 auto;
}

.business .baseBox .base {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.business .baseBox .base view {
  width: 33%;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #333;
  margin: 30rpx 0;
}

.business .baseBox .base view text {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.business .baseBox .base .line {
  width: 2rpx;
  height: 90rpx;
  background: #eee;
  margin-top: 40rpx;
}

/* 客流统计分析 */

.passenger {
  margin-top: 20rpx;
  background: #fff;
}

.passenger .head {
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #24303c;
}

.passenger .diagram {
  padding: 0 30rpx;
}

.passenger .diagram .words {
  height: 400rpx;
}

.passenger .diagram .browse {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 0;
}

.passenger .diagram .browse view {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.passenger .diagram .browse view text {
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.passenger .diagram .browse .line {
  width: 2rpx;
  height: 90rpx;
  background: #eee;
  margin-top: 10rpx;
}

/* 商品销售分析 */

.goods {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.goods .head {
  padding: 30rpx 29rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}

.goods .head .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #24303c;
}

.goods .head .detail {
  font-size: 32rpx;
  color: #999;
  display: flex;
}

.goods .head .detail view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 30rpx;
  position: relative;
}

.goods .head .detail view.active {
  color: #00aeff;
}

.goods .head .detail view image {
  width: 12rpx;
  height: 10rpx;
  margin: 0 auto;
  position: absolute;
  top: 76rpx;
  left: 50%;
}

.goods .lists {
  padding: 0 30rpx;
}

.goods .lists .thead {
  padding: 30rpx;
  display: flex;
}

.goods .lists .thead view {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.goods .lists .thead text {
  display: inline-block;
  width: 2rpx;
  height: 30rpx;
  background: #eee;
  margin-top: 8rpx;
}

.goods .lists .orderNumber {
  margin-right: 30rpx;
}

.goods .lists .goodName {
  margin-left: 30rpx;
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goods .lists .saleNumber {
  margin-left: 30rpx;
}

.goods .lists .list {
  height: 60rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
  padding: 0 30rpx;
}

.goods .lists .list:nth-of-type(even) {
  background: #fafafa;
}

.goods .more {
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.goods .more image {
  width: 24rpx;
  height: 13rpx;
  margin-top: 10rpx;
}

.goods .noMore {
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.pages, .lists {
  display: none;
}

.pages .thead {
  padding-right: 10rpx !important;
}

.pages .goodName {
  max-width: 350rpx;
}

.pages .salesNum {
  margin-left: 60rpx !important;
}

.show {
  display: block;
}
