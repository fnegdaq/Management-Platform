
page {
  background: #fff;
}

.header_view {
  position: relative;
  height: 470rpx;
  transition: top,height .5s;
}

.header_view .bg{
  height: 390rpx;
  width: 100%;
  
}

.header_view .logo{
  height: 180rpx;
  width: 180rpx;
  box-shadow: 5rpx 5rpx 30rpx #d8ebf9;
  top: 190rpx;
  left: 285rpx;
  position: absolute;
  background: #fff;
  border-radius: 180rpx;
}

.login_area {
  margin: 0 70rpx;
}

.login_area .title1 ,.login_area .title2 {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 7rpx;
}

.login_area .title2 {
  margin-top: 68rpx;
}

.login_area input .placeholder {
  font-size: 32rpx;
  color: #999;
}

.login_area input {
  height: 65rpx;
}

.login_area .forget_pw {
  font-size: 28rpx;
  color: #00aeff;
  margin-left: 0;
  margin-top: 28rpx;
  text-align: right;
}

.login_button {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin: 50rpx 55rpx;
  border-radius: 80rpx;
  height: 80rpx;
  background: linear-gradient(to bottom, #31beff, #00a1ec);
  text-align: center;
  line-height: 80rpx;
  box-shadow: 5rpx 10rpx 30rpx #d8ebf1;
}

.input_area image {
  width: 40rpx;
  height: 40rpx;
}

.login_area .title1 text, .login_area .title2 text{
  color: #e20000;
  margin-left: 40rpx;
}
