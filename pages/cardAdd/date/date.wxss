/* pages/user/user.wxss */

.main {
  padding-bottom: 98rpx;
}

.headdate {
  height: 30px;
  background-color: #f4f3f8;
  flex: 1;
  text-align: center;
  line-height: 30px;
  color: #747475;
  padding: 10rpx 0;
}

.headbox {
  display: flex;
  display: -webkit-flex;
  border-bottom: 1px solid #eee;
}

.headbox2 {
  display: flex;
  position: fixed;
  width: 750rpx;
  display: -webkit-flex;
  border-bottom: 1px solid #e5e5e5;
  background: #f4f3f8;
  z-index: 2;
}

.mouth {
  border-bottom: 2rpx solid #eee;
}

.mouthhead {
  height: 88rpx;
  background-color: #fff;
  width: 750rpx;
  line-height: 88rpx;
  text-align: center;
}

.daybox {
  background-color: white;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.day {
  width: 107rpx;
  height: 107rpx;
  line-height: 107rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  top: 0;
  margin-top: -10rpx;
  overflow: hidden;
  color: #353535;
  font-size: 34rpx;
}

.day2 {
  color: #04babe;
  width: 107rpx;
  height: 107rpx;
  line-height: 107rpx;
  text-align: center;
  display: inline-block;
  position: relative;
  bottom: 0;
  margin-top: 0;
}

.actname {
  color: #04babe;
  position: absolute;
  font-size: 20rpx;
  top: -30rpx;
  width: 107rpx;
  text-align: center;
}

.actname2 {
  color: #04babe;
  position: absolute;
  font-size: 20rpx;
  bottom: -30rpx;
  width: 107rpx;
  text-align: center;
}

.bc {
  background-color: #00aeff;
  border-radius: 18rpx;
  color: white !important;
}

.bc2 {
  color: white !important;
}

.none88 {
  height: 88rpx;
  width: 750rpx;
}

.fixedbtn {
  height: 98rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 40rpx;
  background: #fff;
  border-top: 2rpx solid #eee;
}

.fixedbtn button {
  width: 670rpx;
  height: 66rpx;
  background: #00aeff;
  text-align: center;
  line-height: 66rpx;
  font-size: 32rpx;
  color: #fff;
  margin-top: 16rpx;
}
