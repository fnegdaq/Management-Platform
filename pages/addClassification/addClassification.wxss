
.top_view {
  background: #fff;
  padding: 25rpx 60rpx;
  box-shadow: 5rpx 5rpx 30rpx #eee;
  font-size: 24rpx;
}


.addClassification_view {
  background: #fff;
  box-shadow: 5rpx 5rpx 30rpx #eee;
  margin: 30rpx 30rpx 30rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  padding: 25rpx 30rpx;
  border-radius: 10rpx;
  position: relative;
}

.addClassification_view .title text {
  font-size: 20rpx;
  color: #999;
  font-weight: normal;
  margin-left: 20rpx;
}

.addClassification_view .placeText {
  color: #bbb;
  font-weight: normal;
}

.addClassification_view .pic {
  width: 210rpx;
  height: 210rpx;
  margin-top: 25rpx; 
  background: #f5f5f5;
  position: relative; 
}

 .addClassification_view .add_pic {
  position: absolute;
  left: 75rpx;
  top: 75rpx;
  width: 60rpx;
  height: 60rpx;
} 

.addClassification_view .delete_pic {
  position: absolute;
  left: 220rpx;
  width: 30rpx;
  height: 30rpx;
  margin-top: 10rpx;
}  

.addClassification_view::before {
  content: "";
  background: #eee;
  position: absolute;
  top: 485rpx;
  left: 30rpx;
  height: 2rpx;
  width: 630rpx;
}

.addClassification_view .parent_title {
  color: #888;
  padding: 25rpx 0rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 25rpx;
  font-weight: normal;
  display: flex;
  justify-content: space-between;
}

.addClassification_view .parent_title image {
  width: 25rpx;
  height: 25rpx;
}

.addClassification_view .menu {
  background-color:rgba(0,0,0,0.7) ;
  width: 150rpx;
  color: #fff;
  font-size: 26rpx;
  font-weight: bold;
  position: absolute;
  line-height: 92rpx;
  text-align: center;
  border-radius: 10rpx;
  right: 14rpx;
  top: 135rpx;
  z-index: 10;
}

.addClassification_view .menu image{
  position: absolute;
  top: -12rpx;
  width: 30rpx;
  height: 12rpx;
  right: 14rpx;
}

.addClassification_view .menu .menu_item {
  border-top: 1rpx solid #737373;
}


