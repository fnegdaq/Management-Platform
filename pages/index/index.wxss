@import "../../components/funcButton/funcButton.wxss";
@import "../../components/tabBar/tabBar.wxss";

.container .order {
  justify-content: space-between;
  padding: 0 30rpx;
  margin: 20rpx 0 60rpx 0;
}

.container .header {
  height: 350rpx;
  background: #24303c;
  margin-bottom: 30rpx;
}

.container .header .dataset {
  position: absolute; 
  top: 217rpx;
  left: 0;
  right: 0;
  height: 130rpx;
  justify-content: center;
  padding: 0 10rpx;
}

.container .header .dataset .data_block{
  width: 33%;
  height: 100%;
}

.container .header .dataset .data_block .data_num{ 
  margin-top: 20rpx;
  font-size: 36rpx;
  color: #fff;
}

.container .header .dataset .data_block .data_title{ 
  font-size: 24rpx;
  color: #bbb;
}

.container .header::before {
  content: '';
  width: 100%;
  height: 2rpx;
  position: absolute; 
  left: 0;
  top: 217rpx;
  background-color: #4c5158;
}

.container .header .select_shop {
  background: #0795d8;
  border-radius: 10rpx;
  color: #fff;
  height: 72rpx;
  width: 200rpx;
  line-height: 72rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 74rpx;
}

.container .func_title {
  font-size: 36rpx;
  font-weight: bold;
  color: #24303c;
  margin-left: 30rpx;
}

.container .manage  {
  margin: 20rpx 0 50rpx 0;
}

.container .manage image {
  width: 162rpx;
  height: 100rpx;
  background-color:rgba(0,0,0,0.1) ;
  box-shadow: 2rpx 5rpx 30rpx #ddd;
}

.container .manage .image2 {
  margin-left: 6rpx;
}

.container .manage .image1 {
  margin-left: 30rpx;
}

.container .info {
  padding-top: 20rpx;
}

.container .info .price {
  color: #00aeff;
  font-size: 72rpx;
}

.container .info .price text{
  font-size:28rpx;
  margin-left: 5rpx;
  font-weight: normal;
}

.container .info .title {
  font-size: 28rpx;
  color: #ddd;
}

.container .info .title text {
  margin-left: 18rpx;
  color: #fff;
  border-bottom: 1rpx solid #fff;
}

.container .info .switch {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  width: 120rpx;
  height: 44rpx;
  background: #19222e;
  border-radius: 6rpx;
  font-size: 24rpx;
  color:#bbb;
  line-height: 44rpx;
  text-indent: 10rpx;
}





