/* pages/withdrawal/withdrawal.wxss */

.topView {
  background: #24303c;
  height: 126rpx;
}

.suspension_view_box {
  margin: 0 30rpx 30rpx 30rpx; 
  position: relative;
}

.suspension_view {
  top: -96rpx;
  width: 100%;
  height: 230rpx;
  z-index: 2;
  background: #fff;
  position: absolute;
  border-radius: 10rpx;
  box-shadow: 0 10rpx 10rpx #f4f8f9;
}

.suspension_view_money {
  color: #00aeff;
  font-size: 72rpx;
  line-height: 72rpx;
}

.suspension_view_money text {
  color: #00aeff;
  font-size: 28rpx;
}

.suspension_view_title {
  color: #666;
  font-size: 28rpx;
}

.bottomView {
  padding-top: 130rpx;
  background: #fff;
  box-shadow: 0 10rpx 10rpx #f4f8f9;
}

.content {
  padding: 30rpx;
  position: relative;
}

.content_noline {
  padding: 30rpx;
}

.content::before {
  content: " ";
  position: absolute;
  left: 30rpx;
  bottom: 0;
  right: 30rpx;
  height: 1px;
  background: #eee;
}

.left_content {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 30rpx;
  height: 30rpx;
}

